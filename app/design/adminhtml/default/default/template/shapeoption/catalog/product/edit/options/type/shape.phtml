<?php
$product = $this->getProduct();
?>
<script type="text/javascript">

<?php if($product->getTypeId() == "configurable"):?>
    <?php
    $childProducts = Mage::getModel('catalog/product_type_configurable')
        ->getUsedProducts(null,$product);

    $name = "";
    foreach($childProducts as $child) {
        $name .= $child->getId().";";
    }
    ?>
    OptionTemplateShape =
        '<table class="border" cellpadding="0" cellspacing="0">'+
        '<tr class="headings">'+
        '<th class="type-price"><?php echo Mage::helper('shapeoption')->__('Editable') ?></th>' +
        '<th class="last"><?php echo Mage::helper('shapeoption')->__('Min') ?></th>'+
        '<th class="last"><?php echo Mage::helper('shapeoption')->__('Max') ?></th>'+
        '<th class="last"><?php echo Mage::helper('shapeoption')->__('Visible in') ?></th>'+
        '</tr>'+
        '<tr>'+
        '<td><input type="checkbox" class="checkbox" id="product_option_{{option_id}}_editable" name="product[options][{{option_id}}][sku]" value="{{sku}}"></td>' +
        '<td><input type="text" class="input-text validate-zero-or-greater" name="product[options][{{option_id}}][image_size_x]" value="{{image_size_x}}"></td>'+
        '<td><input type="text" class="input-text validate-zero-or-greater" name="product[options][{{option_id}}][image_size_y]" value="{{image_size_y}}"></td>'+
        '<td class="last"><input type="text" class="input-text type-sku" name="product[options][{{option_id}}][file_extension]" value="<?php echo $name?>"></td>'+
        '</tr>'+
    '</table>';
<?php else:?>
    OptionTemplateShape = "<?php echo Mage::helper('shapeoption')->__('Only support for configurable product') ?>"
<?php endif;?>

if ($('option_panel_type_shape_option')) {
    $('option_panel_type_shape_option').remove();
}

</script>
